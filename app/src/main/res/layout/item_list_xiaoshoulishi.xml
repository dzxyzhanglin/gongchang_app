            android:id="@+id/xsls_PFD_ZDJE"
            style="@style/Normal_ItemList_Body"
            android:text="$5000"
            />
    </LinearLayout>

    <LinearLayout style="@style/Normal_ItemList_Layout">
        <TextView
            style="@style/Normal_ItemList_Title"
            android:text="状态："
            />
        <TextView
            android:id="@+id/xsls_PFD_DJZT"
            style="@style/Normal_ItemList_Body"
            android:text="已核实"
            />
        <TextView
            style="@style/Normal_ItemList_Title"
            android:text="日期："
            />
