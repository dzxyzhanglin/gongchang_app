<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/color_white"
    android:orientation="vertical"
    >

    <LinearLayout style="@style/Normal_ItemList_Layout">
        <TextView
            style="@style/Normal_ItemList_Title"
            android:text="单号："
            />
        <TextView
            android:id="@+id/xsls_PFD_DJBH"
            style="@style/Normal_ItemList_Body"
            android:textSize="12sp"
            android:text="DQ-FH201701050028"
            />
        <TextView
            style="@style/Normal_ItemList_Title"
            android:text="客户："
            />
        <TextView
            android:id="@+id/xsls_DWZ_DWMC"
            style="@style/Normal_ItemList_Body"
            android:textSize="12sp"
            android:text="重庆民汉贸易有限公司"
